//17.Calculate area and perimeter of rectangle
#include<stdio.h>
int main()
{
    int l=0,a=0,p=0,b=0;
    printf("Enter length of the rectangle , l :");
    scanf("%d",&l);
    printf("Enter breadth of the rectangle , b :");
    scanf("%d",&b);
    
    
    a=l*b;
    p=2*(l+b);
    
    printf("\nArea of the rectangle of length l=%d and breadth b:%d is : %d",l,b,a);
    printf("\nPerimeter of the square of length l=%d and breadth b:%d is : %d",l,b,p);
    
    
    return 0;
}
